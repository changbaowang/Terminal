<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/color_white"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/tab_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_image_size"
            android:layout_height="@dimen/tab_image_size"
            android:src="@drawable/tab_connection_selector"/>
        <!--android:src="@drawable/tab_connection_selector"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="@dimen/tab_vertical_space"
            android:ellipsize="end"
            android:textSize="@dimen/tab_text_size"
            android:textColor="@color/tab_text_selector"
            android:text="@string/kConnection"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_feature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_image_size"
            android:layout_height="@dimen/tab_image_size"
            android:src="@drawable/tab_feature_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tab_text_size"
            android:layout_marginTop="@dimen/tab_vertical_space"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/tab_text_selector"
            android:text="@string/kFeature"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tab_image_size"
            android:layout_height="@dimen/tab_image_size"
            android:src="@drawable/tab_setting_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_text_selector"
            android:textSize="@dimen/tab_text_size"
            android:layout_marginTop="@dimen/tab_vertical_space"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/kSettings"/>
        </LinearLayout>

</LinearLayout>