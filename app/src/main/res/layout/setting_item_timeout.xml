<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/setting_timeout_ll"
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/feature_item_vertical_space"
              android:layout_height="wrap_content"
              android:background="@drawable/common_item_bg_selector"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_split_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/feature_item_height"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/feature_item_image_size"
            android:layout_height="@dimen/feature_item_image_size"
            android:layout_marginLeft="@dimen/feature_item_horizontal_space"
            android:src="@mipmap/setting_timeout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/feature_item_horizontal_space"
            android:text="@string/kTimeoutSetting"/>

        <TextView
            android:id="@+id/setting_timeout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/feature_item_horizontal_space"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_split_line"/>
</LinearLayout>