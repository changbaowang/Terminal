<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feature_realdata_ll"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/feature_item_vertical_space"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_bg_selector"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_split_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/feature_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/feature_item_image_size"
            android:layout_height="@dimen/feature_item_image_size"
            android:layout_marginLeft="@dimen/feature_item_horizontal_space"
            android:src="@mipmap/feature_real_data"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/feature_item_horizontal_space"
            android:text="@string/kRealData"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_split_line"/>
</LinearLayout>