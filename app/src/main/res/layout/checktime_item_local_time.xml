<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/checktime_item_device_time_ll"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/feature_item_horizontal_space"
        android:paddingRight="@dimen/feature_item_horizontal_space"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/kEditCheckTime"
                android:textColor="@color/color_item_title"
                android:textSize="@dimen/item_title_text_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/checktime_item_local_time_cb"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:button="@null"
                android:background="@drawable/checkbox_bg_selector"/>

        </LinearLayout>
        <cn.hxgroup.www.hhu.ui.component.ClearEditText
            android:id="@+id/checktime_item_local_time_et"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/item_content_text_size"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="2016/10/01 00:00:00"
            android:enabled="false"
            android:background="@color/color_white"/>
    </LinearLayout>
</LinearLayout>