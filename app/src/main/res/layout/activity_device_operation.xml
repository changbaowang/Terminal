<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/color_titlebar_bg">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/titlebar_height"
            android:layout_height="@dimen/titlebar_height"
            android:background="@drawable/btn_back_bg_selector"
            android:src="@mipmap/back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/kDeviceOperation"
            android:textColor="@color/color_white"
            android:textSize="@dimen/titlebar_text_size"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_split_line"/>

        <include
            layout="@layout/operation_item_state"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_split_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_split_line"/>

        <include
            layout="@layout/operation_item_remote_switch_off"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_split_line"/>

        <include
            layout="@layout/operation_item_allow_switch_on"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_split_line"/>

        <include
            layout="@layout/operation_item_remote_switch_on"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_split_line"/>
    </LinearLayout>

</LinearLayout>